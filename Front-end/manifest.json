{
  "manifest_version": 3,
  "name": "Website Checker",
  "version": "1.0",
  "description": "Checks websites for phishing.",
  "permissions": [
    "tabs",
    "notifications" ,
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"

  

  ],
  "background": {
    "service_worker": "background.js"
  },


  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "host_permissions": [
    "*://*/*",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
        
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
